

    <div class="container">
      <p id="notice"><%= notice %></p>
      <h1>Zombies</h1>
      <div class="row">
        <% @zombies.each do |zombie| %>
          <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
              <%= image_tag zombie.photo, alt: "zombies", class: 'img-responsive' %>
              <div class="caption">
                <h3>Nombre: <%= zombie.name %></h3>
                <p>Eliminados: <%= zombie.killed %></p>
                <p><%= zombie.killed %></p>
                <p><%= zombie.name %></p>
                <p><%= zombie.health %></p>
                <%= link_to 'Show', zombie, class: "btn btn-success" %>
                <%= link_to 'Edit', edit_zombie_path(zombie), class: "btn btn-danger" %>
                <%= link_to 'Destroy', zombie, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info" %>
                <%= link_to 'New Zombie', new_zombie_path, class: "btn btn-primary" %>
              </div>
            </div>
          </div>
        <% end%>
      </div>
    </div>
